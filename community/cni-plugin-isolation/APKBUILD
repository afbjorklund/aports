pkgname=cni-plugin-isolation
pkgver=0.0.4
pkgrel=0
pkgdesc="CNI bridge isolation plugin"
url="https://github.com/AkihiroSuda/cni-isolation"
license="Apache-2.0"
arch="all"
depends=""
makedepends="go"
options="!check" # Requires root but 'checkroot' doesn't work with go programs
source="$pkgname-$pkgver.tar.gz::https://github.com/AkihiroSuda/cni-isolation/archive/v$pkgver.tar.gz"
builddir="$srcdir/cni-isolation-$pkgver"

build() {
	make
}

package() {
	install -Dm755 -t "$pkgdir"/usr/libexec/cni bin/*
}

sha512sums="
